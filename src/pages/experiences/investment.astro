---
import Layout from "../../layouts/Layout.astro";
---

<Layout title="Investment Journey | Cedric Emmanuel">
  <nav class="main-nav">
    <a href="/">Home</a>
    <a href="/projects">Projects</a>
    <a href="/blog">Blog</a>
    <a href="/experience">Experience</a>
  </nav>

  <div class="container">
    <div class="header">
      <a href="/experience" class="back-link">‚Üê Back to Experience</a>
      <h1>üí∞ Investment Journey</h1>
      <p class="subtitle">Exploring financial markets and portfolio management</p>
    </div>

    <div class="coming-soon">
      <p>Content coming soon! Share your crypto and stock investment details to populate this page.</p>
